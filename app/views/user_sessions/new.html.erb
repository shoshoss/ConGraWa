<div class="container mx-auto px-4">
  <div class="max-w-xl mx-auto my-10 bg-white p-8 rounded-lg shadow-lg">
    <h1 class="text-3xl font-bold mb-6 text-center">ログイン</h1>
    <%= form_with url: login_path do |f| %>
      <div class="flex justify-center items-center">
        <%= link_to 'Login with Google', auth_at_provider_path(provider: :google) %>
      </div>
      <div class="card-body mx-auto">
        <div class="form-control mt-2">
          <%= f.label :email, 'メールアドレス', class: "label-text" %>
          <%= f.email_field :email, placeholder: "email@example.com", class: "input input-bordered", required: true, autocomplete: "email" %>
        </div>
        <div class="form-control mt-2">
          <%= f.label :password, 'パスワード', class: "label-text" %>
          <%= f.password_field :password, placeholder: "password", class: "input input-bordered", required: true, autocomplete: "current-password" %>
        </div>
        <div class="form-control mt-4 lg:mt-6">
          <%= f.submit "ログイン", class: "btn btn-primary w-full" %>
        </div>
      </div>
    <% end %>
    <div class='mt-2 text-center text-base text-gray-600'>
      <%= link_to 'パスワードをお忘れの方はこちら', '#', class: "link link-hover text-lg mt-2" %>
    </div>
    <div class='mt-2 text-center text-base text-gray-600'>
      <%= link_to '登録ページへ', new_user_path, class: "link link-hover text-lg" %>
    </div>
  </div>
</div>
