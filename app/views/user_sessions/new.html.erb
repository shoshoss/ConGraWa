<div class="container mx-auto px-4">
  <div class="max-w-xl mx-auto my-10 bg-white p-8 rounded-lg shadow-lg">
    <h1 class="text-4xl font-bold mb-12 text-center">ログイン</h1>
    <%= form_with url: login_path do |f| %>
      <div class="flex items-center justify-center mb-10">
        <%= link_to auth_at_provider_path(provider: :google), method: :post, class: "px-6 py-3 border flex gap-2 border-blue-200 dark:border-blue-300 rounded-lg text-blue-700 dark:text-blue-200 hover:border-blue-400 hover:text-blue-800 hover:shadow-outline transition duration-150 text-lg" do %>
          <img class="w-8 h-8" src="https://www.svgrepo.com/show/475656/google-color.svg" loading="lazy" alt="google logo">
          <span class="text-xl">Googleでログイン</span>
        <% end %>
      </div>

    <div class="flex items-center justify-center mb-2">
      <div class="flex-grow border-t border-gray-300"></div>
      <span class="flex-shrink mx-4 text-lg">または</span>
      <div class="flex-grow border-t border-gray-300"></div>
    </div>

      <div class="card-body mx-auto">
        <div class="form-control mt-2">
          <%= f.label :email, 'メールアドレス', class: "label-text mb-1" %>
          <%= f.email_field :email, placeholder: "example@congrawa.com", class: "input input-bordered", required: true, autocomplete: "email" %>
        </div>
        <div class="form-control mt-2">
          <%= f.label :password, 'パスワード', class: "label-text mb-1" %>
          <%= f.password_field :password, class: "input input-bordered", required: true, autocomplete: "current-password" %>
        </div>
        <div class="form-control mt-4 lg:mt-6">
          <%= f.submit "ログイン", class: "btn btn-primary w-full" %>
        </div>
      </div>
    <% end %>
    <div class='mt-1 text-center text-base text-gray-600'>
      <%= link_to 'パスワードをお忘れの方はこちら', '#', class: "link link-hover text-lg mt-2" %>
    </div>
    <div class='mt-2 text-center text-base text-gray-600'>
      <%= link_to '登録ページへ', new_user_path, class: "link link-hover text-lg" %>
    </div>
  </div>
</div>
