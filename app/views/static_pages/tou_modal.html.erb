<%= turbo_frame_tag "tou_modal" do %>
  <dialog id="tou_modal_daialog" class="modal bg-gray-500 bg-opacity-50" data-controller="tou-modal">
    <div class="modal-box">
      <div class="flex justify-end items-center">
        <i class="fa-solid fa-xmark h-6 w-6  hover:text-blue-500" data-action="click->tou-modal#closeModal"></i>
      </div>
      <%= render 'static_pages/tou_form' %>
      <div class="modal-action">
        <button class="btn" data-action="tou-modal#closeModal">閉じる</button>
      </div>
    </div>
    <form method="dialog" class="modal-backdrop">
      <button>close</button>
    </form>
  </dialog>
<% end %>