<% if @user.errors.any? %>
  <%= turbo_stream.replace 'flash', partial: 'shared/flash_message', locals: { flash: { danger: I18n.t('flash_messages.users.guest_login_failure') } } %>
<% else %>
  <%= turbo_stream.replace 'no-sidebar', partial: 'shared/sidebar' %>
  <%= turbo_stream.replace 'no-widget', partial: 'shared/widget' %>
  <%= turbo_stream.replace 'before_login_header', partial: 'shared/header' %>
  <%= turbo_stream.update 'before_profile_edit_flash', partial: 'shared/before_profile_edit_flash', locals: { before_profile_edit_flash: { notice: I18n.t('flash_messages.users.guest_login_success') } } %>
<% end %>
