<div class="flex justify-center min-h-screen">
  <div class="max-w-xl w-full bg-white border-2 border-gray-200">
    <h1 class="text-center font-bold text-xl mt-2"><%= @user.display_name %></h1>
    <p class="text-center text-sm">@<%= @user.username_slug %></p>
    <div class="c-tabs mt-4 mb-2">
      <%= link_to user_followings_followers_path(@user, category: 'followings'), data: { turbo_frame: "followings_followers" }, class: "c-tab #{active_tab_class('followings', initial_category: 'followings')}" do %>
        フォロー中
      <% end %>
      <%= link_to user_followings_followers_path(@user, category: 'followers'), data: { turbo_frame: "followings_followers" }, class: "c-tab #{active_tab_class('followers', initial_category: 'followings')}" do %>
        フォロワー
      <% end %>
    </div>

    <%= turbo_frame_tag "followings_followers" do %>
      <% if params[:category] == 'followers' %>
        <%= render 'users/users', users: @followers %>
      <% else %>
        <%= render 'users/users', users: @followings %>
      <% end %>
    <% end %>
  </div>
</div>
