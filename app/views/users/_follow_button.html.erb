<%= turbo_frame_tag "user-#{user.id}-follow" do %>
  <% if user_following?(current_user, user) %>
    <%= button_to 'フォロー中', user_friendships_path(user), method: :delete, class: "w-[115px] sm:w-[128px] btn-following btn-unfollow-hover", data: { turbo_frame: "_top", unfollow_text: "フォロー解除" } %>
  <% elsif current_user && current_user != user %>
    <%= button_to 'フォローする', user_friendships_path(user), method: :post, class: "w-[115px] sm:w-[128px] btn-follow", data: { turbo_frame: "_top" } %>
  <% end %>
<% end %>
