<% content_for(:title, t('.title')) %>
<div class="max-w-4xl mx-auto px-4">
  <div class="flex justify-center">
    <div class="w-full max-w-lg">
      <h1 class="text-xl font-bold"><%= t('.title') %></h1>
      <%= form_with model: @user, url: password_reset_path(@token), method: :patch do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <div class="mb-4">
          <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :email, class: "input input-bordered w-full", disabled: true, value: @user.email %>
        </div>
        <div class="mb-4">
          <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
          <%= f.password_field :password, class: "input input-bordered w-full" %>
        </div>
        <div class="mb-4">
          <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700" %>
          <%= f.password_field :password_confirmation, class: "input input-bordered w-full" %>
        </div>
        <%= f.submit t('.submit'), class: "btn btn-primary w-full" %>
      <% end %>
    </div>
  </div>
</div>
