<%= turbo_frame_tag "post-#{post.id}-like" do %>
  <% if current_user.like?(post) %>
    <% like = current_user.likes.find_by(post: post) %>
    <%= link_to post_like_path(post.id, like.id), method: :delete, data: { turbo_method: :delete, controller: 'like', action: 'click->like#animate', post_id: post.id, action_type: 'unlike', like_id: like.id }, id: "post-#{post.id}-like-button" do %>
      <i class="fas fa-heart text-xl text-red-500 hover:text-red-700"></i>
    <% end %>
  <% else %>
    <%= link_to post_likes_path(post.id), method: :post, data: { turbo_method: :post, controller: 'like', action: 'click->like#animate', post_id: post.id, action_type: 'like' }, id: "post-#{post.id}-like-button" do %>
      <i class="fas fa-heart text-xl text-gray-500 hover:text-red-700"></i>
    <% end %>
  <% end %>
<% end %>
