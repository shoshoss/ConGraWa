<div class="container pt-3">
  <!-- 検索フォーム -->
  <div class="w-10/12 mx-auto">
    <form class="mb-3">
      <div class="flex items-center">
        <input class="w-full px-4 py-2 mr-2 text-gray-700 bg-gray-200 rounded-lg focus:outline-none focus:bg-white" type="search" placeholder="検索ワード">
        <button type="submit" class="px-4 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600">検索</button>
      </div>
    </form>
  </div>
  <!-- 投稿一覧 -->
  <div class="w-10/12 mx-auto">
    <div class="grid grid-cols-1 gap-4">
      <% if @posts.present? %>
        <%= turbo_frame_tag "posts-frame" do %>
          <%= render @posts %>
          <% if @posts.next_page %>
            <%= link_to 'More Posts', path_to_next_page(@posts), id: 'pagination-link', remote: true, style: "display: none;" %>
          <% end %>
        <% end %>
      <% else %>
        <div class="mb-3">投稿がありません</div>
      <% end %>


    </div>
  </div>
</div>
