<%= turbo_frame_tag "post_edit_modal" do %>
  <dialog id="post_edit_modal_dialog" class="modal bg-gray-500 bg-opacity-50"  data-controller="post-edit-modal">
    <div class="modal-box p-2">
      <div class="flex justify-end items-center">
        <button class="text-blue-500 hover:text-blue-700 font-semibold" data-action="click->post-edit-modal#closeModal">閉じる</button>
      </div>

        <div class="mx-auto pt-2">
          <%= render 'form', post: @post %>
        </div>

      <!-- モーダルを閉じるボタン -->
      <div class="modal-action my-4 flex justify-center">
        <button class="btn bg-gray-300 hover:bg-gray-400 text-gray-800 font-semibold py-2 px-4 rounded" data-action="click->post-edit-modal#closeModal">閉じる</button>
      </div>
    </div>
  </dialog>
<% end %>
