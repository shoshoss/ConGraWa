<%= turbo_frame_tag dom_id(repost, :repost) do %>
  <% unread_notification = @notifications&.find { |n| n.unread? && n.notifiable_type == 'Post' && n.notifiable_id == post.id } %>
  <div data-controller="audio" id="repost-id-<%= repost.id %>",
       class="hover:bg-sky-100 overflow-hidden border-b my-4 p-[8px] <%= 'bg-orange-100' if unread_notification %>">
    <div class="ml-[8px] mb-[2px]">
      <i class="fa-solid fa-retweet text-base text-gray-500"></i>
      <%= link_to profile_modal_path(username_slug: repost.user.username_slug), class: "text-base font-semibold text-gray-500 hover:underline ml-[2px]", data: { turbo_frame: "profile_modal" } do %>
        <%= repost.user.display_name %>さんがリポスト
      <% end %>
    </div>
    <% unread_notification = @notifications&.find { |n| n.unread? && n.notifiable_type == 'Repost' && n.notifiable_id == repost.id } %>
    <div class="flex">
      <%= render 'posts/post_body', post: repost %>
    </div>
  </div>
<% end %>
