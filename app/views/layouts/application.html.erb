<!DOCTYPE html>
<html>
<head>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <title><%= page_title(yield(:title)) %></title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <!-- Google tag (gtag.js) -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=G-GHS6E1S0P8"></script>
  <script async src="https://www.googletagmanager.com/gtag/js?id=G-97P3PDF8S9"></script>
  <script async src="https://www.googletagmanager.com/gtag/js?id=G-KJE019PX6L"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());

    // G-GHS6E1S0P8 のトラッキング (プロパティA Renderのドメイン)
    gtag('config', 'G-GHS6E1S0P8');
    
    // G-97P3PDF8S9 のトラッキング (プロパティA 独自ドメイン)
    gtag('config', 'G-97P3PDF8S9');

    // G-KJE019PX6L のトラッキング (プロパティB 独自ドメイン)
    gtag('config', 'G-KJE019PX6L');
    
  </script>

  <!-- JavaScriptの設定 -->
  <%= javascript_importmap_tags %>
  <script src="https://kit.fontawesome.com/630314d173.js" crossorigin="anonymous"></script>

  <!-- スタイルシートのリンク -->
  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>


  <!-- Turboフレームタグ -->
  <%= turbo_frame_tag 'signup_modal' %>
  <%= turbo_frame_tag 'tou_modal' %>
  <%= turbo_frame_tag 'privacy_modal' %>
  <%= turbo_frame_tag 'post_modal' %>

  <!-- Favicon for legacy browsers -->
  <link rel="icon" href="/favicon.ico" sizes="32x32">

  <!-- SVG icon for modern browsers with light/dark mode support -->
  <link rel="icon" href="/icon.svg" type="image/svg+xml">

  <!-- Apple Touch Icon -->
  <link rel="apple-touch-icon" href="/apple-touch-icon.png">

  <!-- Android Touch Icon -->
  <link rel="icon" sizes="192x192" href="/icon-192.png">
  <link rel="icon" sizes="512x512" href="/icon-512.png">

  <!-- Web App Manifest -->
  <link rel="manifest" href="/manifest.webmanifest">

  <!-- Service Worker Registration -->
  <script>
    if ('serviceWorker' in navigator) {
      window.addEventListener('load', () => {
        navigator.serviceWorker.register('/service-worker.js')
          .then(registration => {
            console.log('Service Worker registered with scope:', registration.scope);
          })
          .catch(error => {
            console.error('Service Worker registration failed:', error);
          });
      });
    }
  </script>
</head>

<body class="font-sans bg-white flex flex-col min-h-screen">
  <!-- ヘッダー -->
  <header class="sm:sticky sm:top-0 z-50 bg-white w-full shadow max-w-screen-xl mx-auto">
    <% if logged_in? %>
      <%= render 'shared/header' %>
    <% else %>
      <div id="before_login_header">
        <%= render 'shared/before_login_header' %>
      </div>
    <% end %>
  </header>

  <!-- コンテンツコンテナ -->
  <div class="flex-1 flex flex-col md:flex-row max-w-screen-xl mx-auto w-full">
    <!-- サイドバー -->
    <% if logged_in? %>
      <%= render 'shared/sidebar' %>
    <% else %>
      <div id="no-sidebar"></div>
    <% end %>

    <!-- メインコンテンツ -->
    <main class="flex-1">
      <%= render 'shared/flash_message' %>
      <div id="before_profile_edit_flash">
        <%= render 'shared/before_profile_edit_flash' %>
      </div>
      <%= yield %>
    </main>

    <!-- ウィジェット -->
    <% if logged_in? %>
      <%= render 'shared/widget', users: @recent_users %>
    <% else %>
      <div id="no-widget"></div>
    <% end %>
  </div>

  <!-- フッター -->
  <%= render 'shared/footer' %>

  <!-- スマホ用ボトムメニューバー -->
  <% if logged_in? %>
  <nav class="fixed bottom-0 left-0 w-full bg-white border-t sm:hidden">
    <ul class="flex justify-around">
      <li class="flex-1 text-center">
        <%= link_to posts_path, class: "block py-2 #{'text-blue-500' if current_page?(posts_path)}" do %>
          <i class="fas fa-globe text-2xl"></i>
        <% end %>
      </li>
      <li class="flex-1 text-center">
        <%= link_to profile_show_path(username_slug: current_user.username_slug), class: "block py-2 #{'text-blue-500' if current_page?(profile_show_path(username_slug: current_user.username_slug))}" do %>
          <i class="fas fa-user text-2xl"></i>
        <% end %>
      </li>
      <li class="flex-1 text-center relative">
        <%= link_to notifications_path, class: "block py-2 #{'text-blue-500' if current_page?(notifications_path)}" do %>
          <i class="fas fa-bell text-2xl"></i>
          <% unread_notifications_count = current_user.received_notifications.unread.count %>
          <% if unread_notifications_count > 0 %>
            <span class="absolute -top-1 -right-1 inline-block w-4 h-4 bg-orange-400 text-white text-xs rounded-full text-center">
              <%= unread_notifications_count %>
            </span>
          <% end %>
        <% end %>
      </li>
      <li class="flex-1 text-center">
        <%= link_to profile_show_path(username_slug: current_user.username_slug, category: 'posts_to_you'), class: "block py-2 #{'text-orange-400' if current_page?(profile_show_path(username_slug: current_user.username_slug, category: 'posts_to_you'))}" do %>
          <i class="fa-regular fa-envelope text-2xl"></i>
        <% end %>
      </li>
    </ul>
  </nav>
  <% end %>
</body>
</html>
