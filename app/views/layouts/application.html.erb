<!DOCTYPE html>
<html>
<head>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <title><%= page_title(yield(:title)) %></title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <!-- JavaScriptの設定 -->
  <%= javascript_importmap_tags %>
  <script src="https://kit.fontawesome.com/630314d173.js" crossorigin="anonymous"></script>

  <!-- スタイルシートのリンク -->
  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <%= stylesheet_link_tag 'custom', media: 'all', 'data-turbo-track': 'reload' %>

  <!-- Turboフレームタグ -->
  <%= turbo_frame_tag 'tou_modal' %>
  <%= turbo_frame_tag 'privacy_modal' %>
  <%= turbo_frame_tag 'post_modal' %>
</head>
<body class="font-sans bg-white flex flex-col min-h-screen">
  <!-- ヘッダー -->
  <header class="sticky top-0 z-50 bg-white w-full shadow max-w-screen-xl mx-auto">
    <% if logged_in? %>
      <%= render 'shared/header' %>
    <% else %>
      <div id="before_login_header">
        <%= render 'shared/before_login_header' %>
      </div>
    <% end %>
  </header>

  <!-- コンテンツコンテナ -->
  <div class="flex-1 flex flex-col md:flex-row max-w-screen-xl mx-auto w-full">
    <!-- サイドバー -->
    <% if logged_in? %>
        <%= render 'shared/sidebar' %>
    <% else %>
      <div id="no-sidebar">
      </div>
    <% end %>

    <!-- メインコンテンツ -->
    <main class="flex-1">
      <%= render 'shared/flash_message' %>
      <%= yield %>
    </main>

    <!-- ウィジェット -->
    <% if logged_in? %>
        <%= render 'shared/widget' %>
    <% else %>
      <div id="widget">
      </div>
    <% end %>
  </div>

  <!-- フッター -->
  <%= render 'shared/footer' %>
</body>
</html>
