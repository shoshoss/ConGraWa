<!DOCTYPE html>
<html>
<head>
  <title><%= page_title(yield(:title)) %></title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <%= javascript_importmap_tags %>
  <script src="https://kit.fontawesome.com/630314d173.js" crossorigin="anonymous"></script>
  <%= turbo_frame_tag 'signup_modal' %>
</head>
<body class="font-sans bg-white">

  <!-- ヘッダー -->
  <header class="sticky top-0 z-30 bg-white w-full shadow md:max-w-screen-xl md:mx-auto">
    <% if logged_in? %>
      <%= render 'shared/header' %>
    <% else %>
      <%= render 'shared/before_login_header' %>
    <% end %>
  </header>

  <!-- コンテンツコンテナ -->
  <div class="flex flex-col md:flex-row h-screen max-w-screen-xl mx-auto overflow-hidden">
    <!-- サイドバー -->
      <% if logged_in? %>
    <aside class="bg-gradient-to-br from-blue-500 to-blue-900 p-5 w-64 hidden md:block sticky top-0 h-screen overflow-y-auto">
        <%= render 'shared/sidebar' %>
    </aside>
      <% end %>

    <!-- メインコンテンツ -->
    <main class="flex-1 overflow-auto">
      <div id="notification" class="p-2">
        <%= render 'shared/flash_message' %>
      </div>
      <%= yield %>
    </main>

    <!-- ウィジェット -->
    <% if logged_in? %>
      <div class="w-64 p-4 hidden lg:block overflow-y-auto">
        <%= render 'shared/widget' %>
      </div>
    <% end %>
  </div>

  <!-- フッター -->
  <footer class="bg-gray-200 w-full md:max-w-screen-xl md:mx-auto mt-auto">
    <%= render 'shared/footer' %>
  </footer>
</body>
</html>
