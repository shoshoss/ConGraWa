<%= turbo_frame_tag 'post_modal' %>
<div id="after-header" class="navbar px-4">
  <div class="flex items-center justify-between w-full">
    <!-- ロゴ -->
    <div class="hidden sm:block shrink-0">
      <%= link_to posts_path do %>
        <%= image_tag 'logo.png', alt: 'ロゴ', class: "h-10 md:h-14 w-auto" %>
      <% end %>
    </div>
    <div class="sm:hidden">
      <%= link_to posts_path do %>
        <%= image_tag asset_path('sample.jpg'), alt: 'ロゴ', class: "rounded-full h-10 w-10" %>
      <% end %>
    </div>

    <!-- ナビゲーションリンク（PC） -->
    <div class="hidden sm:flex flex-1 justify-end items-center space-x-4">
      <%= link_to t('header.about'), root_path, class: "hidden sm:block text-sm sm:text-md md:text-lg py-2 px-4 hover:bg-sky-100 rounded-full transition-colors duration-300 #{active_if(root_path)}" %>
      <%= link_to t('header.post_index'), posts_path, class: "block text-sm sm:text-md md:text-lg py-2 px-4 hover:bg-sky-100 rounded-full transition-colors duration-300 #{active_if(posts_path)}" %>

      <!-- 投稿ボタン -->
      <%= link_to t('header.post_audio'),
                  new_post_path,
                  class: "hidden sm:flex font-bold text-xl btn btn-outline btn-accent rounded-full transition-colors duration-300 px-4 py-2",
                  data: { turbo_frame: "post_modal" } %>
      
      <!-- ユーザーメニュー -->
      <div class="dropdown dropdown-end ml-2 shrink-0">
        <label tabindex="0" class="btn btn-ghost rounded-btn">
          <%= image_tag (current_user.avatar.presence || asset_path('sample.jpg')), class: "rounded-full h-10 w-10 min-w-[40px] md:h-12 md:w-12" %>
        </label>
        <ul tabindex="0" class="menu dropdown-content p-2 shadow bg-base-100 rounded-box w-52 mt-4">
          <li class="block py-2">
            <%= link_to 'プロフィール', profile_show_path(current_user.username_slug), class: "text-md md:text-lg hover:bg-sky-100 rounded-full transition-colors duration-300 px-4" %>
          </li>
          <li class="block py-2">
            <%= link_to t('header.logout'), logout_path, method: :delete, data: { turbo_method: :delete }, class: "text-md md:text-lg hover:bg-sky-100 rounded-full transition-colors duration-300 px-4" %>
          </li>
        </ul>
      </div>
    </div>

    <!-- ナビゲーションリンク（スマホ） -->
    <div class="sm:hidden flex flex-1 justify-end items-center space-x-2">
      <%= link_to t('header.post_index'), posts_path, class: "block text-sm sm:text-lg px-0 rounded-full transition-colors duration-300 #{active_if(posts_path)}" %>

      <!-- 投稿ボタン -->
      <%= link_to t('header.post_audio'),
                  new_post_path,
                  class: "font-bold btn btn-outline btn-accent btn-sm rounded-full transition-colors duration-300 px-0 py-2",
                  data: { turbo_frame: "post_modal" } %>

      <!-- ユーザーメニュー -->
      <div class="dropdown dropdown-end ml-2 shrink-0">
        <label tabindex="0" class="btn btn-ghost rounded-btn">
          <%= image_tag (current_user.avatar.presence || asset_path('sample.jpg')), class: "rounded-full h-10 w-10 min-w-[40px] md:h-12 md:w-12" %>
        </label>
        <ul tabindex="0" class="menu dropdown-content p-2 shadow bg-base-100 rounded-box w-52 mt-4">
          <li class="py-2">
            <%= link_to t('header.about'), root_path, class: "text-lg hover:bg-sky-100 rounded-full transition-colors duration-300 px-4" %>
          </li>
          <li class="py-2">
            <%= link_to 'プロフィール', profile_show_path(current_user.username_slug), class: "text-lg hover:bg-sky-100 rounded-full transition-colors duration-300 px-4" %>
          </li>
          <li class="py-2">
            <%= link_to 'ログアウト', logout_path, method: :delete, data: { turbo_method: :delete }, class: "text-lg hover:bg-sky-100 rounded-full transition-colors duration-300 px-4" %>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>
