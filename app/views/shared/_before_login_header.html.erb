<div class="navbar px-4">
  <div class="flex items-center justify-between w-full">
    <!-- ロゴ -->
    <div class="shrink-0">
      <%= link_to '/' do %>
        <%= image_tag 'logo.png', alt: 'ロゴ', class: "h-10 md:h-14 w-auto" %>
      <% end %>
    </div>

    <!-- ナビゲーションリンク -->
    <div class="flex flex-1 justify-end items-center space-x-4">
      <%= link_to 'ConGraWaとは', '/', class: 'hidden md:block text-md font-bold py-2 border-b-4 border-cyan-600 text-current' %>
      <%= link_to 'みんなのWave', '#', class: 'hidden md:block text-md font-bold py-2 border-b-4 border-transparent hover:border-cyan-300 hover:text-current' %>

      <%= render "shared/login_modal_button" %>

      <!-- モーダルを開くリンク -->
      <%= link_to t('header.register'), 
              new_signup_modal_path, 
              class: 'btn btn-outline btn-accent md:text-lg sm:text-sm', 
              data: { turbo_frame: "signup_modal" } %>

      <!-- ハンバーガーメニュー -->
      <div class="dropdown dropdown-end">
        <button class="btn btn-square btn-ghost md:hidden" tabindex="0">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>

        <ul tabindex="0" class="menu dropdown-content p-2 shadow bg-base-100 rounded-box w-52 mt-4">
          <!-- 小さな画面でのみ表示されるナビゲーションリンク -->
          <li class="block">
            <%= link_to 'ConGraWaとは', '/', class: 'hover:bg-cyan-600 hover:text-white' %>
          </li>
          <li class="block">
            <%= link_to 'みんなのWave', '#', class: 'hover:bg-cyan-600 hover:text-white' %>
          </li>
          </li>
          <li class="block">
            <%= link_to 'ログイン', login_path, class: 'hover:bg-cyan-600 hover:text-white' %>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>
