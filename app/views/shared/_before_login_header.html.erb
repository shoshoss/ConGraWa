<%= turbo_frame_tag 'login_modal' %>
<div class="navbar px-2 sm:px-4">
  <div class="flex items-center justify-between w-full">
    <!-- ロゴ -->
    <div class="hidden md:block shrink-0">
      <%= link_to root_path do %>
        <%= image_tag 'wave_orange.png', alt: 'ロゴ', class: "h-[48px] lg:h-[64px] w-[200px] lg:w-[300px] w-auto rounded-full",
            data: { turbo_frame: "_top" } %>
      <% end %>
    </div>
    <div class="md:hidden">
      <%= link_to root_path do %>
        <%= image_tag asset_path('wave_orange_sm_c.png'), alt: 'ロゴ', class: "rounded-full h-[50px] w-[50px]",
            data: { turbo_frame: "_top" } %>
      <% end %>
    </div>

    <!-- ナビゲーションリンク -->
    <div class="flex flex-1 justify-end items-center">

      <!-- 新規登録、ゲスト登録、ログインを開くリンク -->
      <%= link_to t('header.trial_login'), guest_login_path, class: 'btn btn-outline btn-secondary btn-sm sm:btn-lg rounded-full transition-colors duration-300 mx-1 sm:mx-4' %>
      <%= link_to t('header.signup'), new_signup_modal_path, class: 'btn btn-outline btn-accent btn-sm sm:btn-lg rounded-full transition-colors duration-300 mx-1 sm:mx-4', data: { turbo_frame: "signup_modal" } %>
      <%= link_to t('header.login'), new_login_modal_path, class: 'btn btn-outline btn-primary btn-sm sm:btn-lg rounded-full transition-colors duration-300 mx-1 sm:mx-4', data: { turbo_frame: "login_modal" } %>

    </div>
  </div>
</div>
