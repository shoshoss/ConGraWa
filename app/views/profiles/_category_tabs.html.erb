<div id="category-tabs" class="z-50">
  <% if current_user == @user %>
    <div class="overflow-x-auto">
      <table class="min-w-full whitespace-nowrap">
        <tr class="">
          <td colspan="3" class="c-tabs">
            <%= link_to profile_show_path(username_slug: @user.username_slug, category: 'all_my_posts'), 
                class: "c-tab text-blue-400 #{active_tab_class('all_my_posts', 'only_me', 'my_posts_following', 'my_posts_open', initial_category: initial_category)} hover:text-blue-500", data: { action: "tabs#change", turbo_frame: "profile-posts" } do %>
              <i class="fas fa-wave mr-1 sm:mr-2"></i><span>私のウェーブ</span>
            <% end %>
          </td>
          <td rowspan="2" class="c-tabs">
            <%= link_to profile_show_path(username_slug: @user.username_slug, category: 'posts_to_you'), 
                class: "c-tab text-orange-400 #{active_tab_class('posts_to_you', initial_category: initial_category)} hover:text-orange-400", data: { action: "tabs#change", turbo_frame: "profile-posts" } do %>
              <i class="fa-regular fa-envelope mr-1 sm:mr-2"></i><span>仲間から</span>
            <% end %>
          </td>
          <td colspan="2" class="c-tabs">
            <%= link_to profile_show_path(username_slug: @user.username_slug, category: 'all_likes_chance'), 
                class: "c-tab text-pink-200-accent #{active_tab_class('all_likes_chance', 'my_likes_chance', 'public_likes_chance', initial_category: initial_category)} hover:text-pink-400-accent", data: { action: "tabs#change", turbo_frame: "profile-posts" } do %>
              <i class="fa-solid fa-handshake-angle mr-1 sm:mr-2"></i><span>いいねチャンス</span>
            <% end %>
          </td>
          <td rowspan="2" class="c-tabs">
            <%= link_to profile_show_path(username_slug: @user.username_slug, category: 'liked'), 
                class: "c-tab text-red-400 #{active_tab_class('liked', initial_category: initial_category)} hover:text-red-500", data: { action: "tabs#change", turbo_frame: "profile-posts" } do %>
              <i class="fa-solid fa-hand-holding-heart mr-1 sm:mr-2"></i><span>いいね</span>
            <% end %>
          </td>
          <td rowspan="2" class="c-tabs">
            <%= link_to profile_show_path(username_slug: @user.username_slug, category: 'bookmarked'), 
                class: "c-tab text-yellow-400-accent #{active_tab_class('bookmarked', initial_category: initial_category)} hover:text-yellow-700-accent", data: { action: "tabs#change", turbo_frame: "profile-posts" } do %>
              <i class="fas fa-bookmark mr-1 sm:mr-2"></i><span>お気に入り</span>
            <% end %>
          </td>
        </tr>
        <tr class="">
          <td class="c-tabs">
            <%= link_to profile_show_path(username_slug: @user.username_slug, category: 'only_me'), 
                class: "c-tab text-blue-400 #{active_tab_class('only_me', initial_category: initial_category)} hover:text-blue-500", data: { action: "tabs#change", turbo_frame: "profile-posts" } do %>
              <i class="fas fa-user mr-1 sm:mr-2"></i><span>自分へ</span>
            <% end %>
          </td>
          <td class="c-tabs">
            <%= link_to profile_show_path(username_slug: @user.username_slug, category: 'my_posts_following'), 
                class: "c-tab text-blue-400 #{active_tab_class('my_posts_following', initial_category: initial_category)} hover:text-blue-500", data: { action: "tabs#change", turbo_frame: "profile-posts" } do %>
              <i class="fa-regular fa-handshake mr-1 sm:mr-2"></i><span>仲間へ</span>
            <% end %>
          </td>
          <td class="c-tabs">
            <%= link_to profile_show_path(username_slug: @user.username_slug, category: 'my_posts_open'), 
                class: "c-tab text-blue-400 #{active_tab_class('my_posts_open', initial_category: initial_category)} hover:text-blue-500", data: { action: "tabs#change", turbo_frame: "profile-posts" } do %>
              <i class="fas fa-globe mr-1 sm:mr-2"></i><span>みんなへ</span>
            <% end %>
          </td>
          <td class="c-tabs">
            <%= link_to profile_show_path(username_slug: @user.username_slug, category: 'my_likes_chance'), 
                class: "c-tab text-pink-200-accent #{active_tab_class('my_likes_chance', initial_category: initial_category)} hover:text-pink-400-accent", data: { action: "tabs#change", turbo_frame: "profile-posts" } do %>
              <i class="fas fa-user-check mr-1 sm:mr-2"></i><span>自分の</span>
            <% end %>
          </td>
          <td class="c-tabs">
            <%= link_to profile_show_path(username_slug: @user.username_slug, category: 'public_likes_chance'), 
                class: "c-tab text-pink-200-accent #{active_tab_class('public_likes_chance', initial_category: initial_category)} hover:text-pink-400-accent", data: { action: "tabs#change", turbo_frame: "profile-posts" } do %>
              <i class="fas fa-users mr-1 sm:mr-2"></i><span>みんなの</span>
            <% end %>
          </td>
        </tr>
      </table>
    </div>
  <% else %>
    <div class="c-tabs flex overflow-x-auto whitespace-nowrap">
      <%= link_to profile_show_path(username_slug: @user.username_slug, category: 'my_posts_open'), 
          class: "c-tab text-blue-400 #{active_tab_class('my_posts_open', initial_category: initial_category)} hover:text-blue-500", data: { action: "tabs#change", turbo_frame: "profile-posts" } do %>
        <i class="fas fa-globe mr-1 sm:mr-2"></i> みんなへ
      <% end %>
      <%= link_to profile_show_path(username_slug: @user.username_slug, category: 'shared_with_you'), 
          class: "c-tab text-blue-400 #{active_tab_class('shared_with_you', initial_category: initial_category)} hover:text-blue-500", data: { action: "tabs#change", turbo_frame: "profile-posts" } do %>
        <i class="fas fa-share-alt mr-1 sm:mr-2"></i> あなたと共有
      <% end %>
    </div>
  <% end %>
</div>
