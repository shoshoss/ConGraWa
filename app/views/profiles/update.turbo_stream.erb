<%= turbo_stream.replace 'after-sidebar' do %>
  <%= render 'shared/sidebar' %>
<% end %>

<%= turbo_stream.replace 'after-header' do %>
  <%= render 'shared/header' %>
<% end %>

<%= turbo_stream.update 'flash_messages' do %>
  <%= render 'shared/flash_message' %>
<% end %>

<%= turbo_stream.replace 'profile_edit_frame', data: { turbo_action: "advance" } do %>
  <%= render 'profiles/show', user: @user, posts: @posts, pagy: @pagy %>
<% end %>
