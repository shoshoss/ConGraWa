<%= form_with(model: [post, reply], url: post_replies_path(post), data: { turbo_frame: "new_reply" }) do |f| %>
  <div class="mb-3">
    <%= f.label :body, class: "form-label" %>
    <%= f.text_area :body, class: "form-control", rows: 3 %>
  </div>
  <div class="mb-3">
    <%= f.label :audio, class: "form-label" %>
    <%= f.file_field :audio, class: "form-control" %>
  </div>
  <%= f.submit '返信', class: "btn btn-primary" %>
<% end %>
