<% if @reply.errors.any? %>
  <%= turbo_stream.replace "new_reply" do %>
    <%= render partial: "replies/form", locals: { post: @post, reply: @reply } %>
  <% end %>
<% else %>
  <%= turbo_stream.prepend "replies", partial: "posts/post_content", locals: { post: @reply } %>
  <%= turbo_stream.replace "new_reply" do %>
    <%= render partial: "replies/form", locals: { post: @post, reply: Post.new } %>
  <% end %>
<% end %>
