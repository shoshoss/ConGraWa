    <%= image_tag(reply.user.avatar.presence || asset_path('sample.jpg'), class: 'rounded-full h-8 w-8') %>
    <div class="ml-2">
      <span class="font-bold"><%= reply.user.display_name %></span>
      <span class="text-gray-500 text-sm">@<%= reply.user.username_slug %></span>
      <span class="text-gray-500 text-sm">ãƒ»<%= l reply.created_at, format: :short %></span>
    </div>
  </div>
  <div>
    <%= simple_format(reply.body) %>
  </div>
</div>
