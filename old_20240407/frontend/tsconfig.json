{
  "compilerOptions": {
    // ターゲットをES5に設定することで、古いブラウザでも動作するコードを生成できる
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    // モジュール解決をnodeに設定することで、Next.jsなどのフレームワークのモジュールを解決できるようになる
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/utils/SignInResponse.types"
  ],
  "exclude": ["node_modules"]
}
